{
  "name": "Risco HASS Bridge",
  "version": "dev",
  "slug": "risco_hass_bridge",
  "description": "Sync Risco Alarm System to HASS",
  "url": "https://github.com/martingrayson/risco-hass-bridge",
  "startup": "before",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "stdin": true,
  "hassio_api": true,
  "hassio_role": "manager",
  "homeassistant_api": true,
  "boot": "auto",
  "map": [
    "backup",
    "share"
  ],
  "services": [
    "mqtt:need"
  ],
  "options": {
    "poll_interval": 120,
    "risco": {
      "username": "test",
      "password": "test",
      "pin": "1234",
      "site_id": "test"
    },
    "mqtt": {
      "host": "localhost",
      "port": 1833,
      "username": "test",
      "password": "test"
    }
  },
  "schema": {
    "poll_interval": "int",
    "risco": {
      "username": "str",
      "password": "str",
      "pin": "str",
      "site_id": "str"
    },
    "mqtt": {
      "host": "str",
      "port": "int?",
      "username": "str?",
      "password": "str?"
    }
  },
  "image": "mgrayson/{arch}-risco-hass-bridge"
}
